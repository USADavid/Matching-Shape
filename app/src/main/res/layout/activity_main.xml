<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:orientation="vertical"
android:layout_width="match_parent"
android:layout_height="match_parent"
    android:weightSum="1">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:columnCount="2"
        android:rowCount="2"
        android:layout_marginTop="10dp">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/imageView3"
            android:layout_row="0"
            android:layout_column="0"
            android:background="@drawable/ic_action_cross"
            android:layout_gravity="center" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/imageView2"
            android:layout_row="0"
            android:layout_column="1"
            android:background="@drawable/ic_action_cross"
            android:layout_gravity="center" />
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/imageView1"
            android:layout_row="1"
            android:layout_column="0"
            android:background="@drawable/ic_action_cross"
            android:layout_gravity="center" />
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/imageView0"
            android:layout_row="1"
            android:layout_column="1"
            android:background="@drawable/ic_action_cross"
            android:layout_gravity="center" />
    </GridLayout>

    <de.ultitech.matchingshape.SegmentedRadioGroup
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_margin="20dip"
        android:orientation="horizontal"
        android:id="@+id/segment_text"
        android:checkedButton="@+id/button_one"
        android:layout_gravity="center_horizontal|bottom">
    <RadioButton android:id="@+id/button_one"
        android:minWidth="50dip"
        android:minHeight="40dip"
        android:text="Easy"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:button="@null"
        android:gravity="center"
        android:textColor="@color/radio_colors"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:checked="false" />
    <RadioButton android:id="@+id/button_two"
        android:minWidth="40dip"
        android:minHeight="33dip"
        android:text="Medium"
        android:button="@null"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/radio_colors"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:checked="false" />
    <RadioButton android:id="@+id/button_three"
        android:minWidth="50dip"
        android:minHeight="40dip"
        android:text="@string/Hard"
        android:button="@null"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/radio_colors"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:checked="false" />
    </de.ultitech.matchingshape.SegmentedRadioGroup>

    <at.markushi.ui.CircleButton
        android:src="@drawable/ic_action_start"
        android:onClick="start"
        app:cb_color="#4CAF50"
        app:cb_pressedRingWidth="8dip"
        android:id="@+id/startButton"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_width="200dp"
        android:layout_height="200dp" />

</LinearLayout>